
<%- include extend/sb_header %>
    <meta http-equiv="refresh" content="6000">
	<!--這是首頁-->
    <div class="row">
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-id-card fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">識別碼</div>
                            <div>
                                <% if (event && event.macAddr) { %>
                                    <%= event.macAddr %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-thermometer-empty fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">溫度</div>
                            <div>
                                <% if (event && event.information.temperature) { %>
                                    <%= event.information.temperature %>℃
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-tint fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">濕度</div>
                            <div>
                                <% if (event && event.information.humidity) { %>
                                    <%= event.information.humidity %>%
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-clock-o fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">時間</div>
                            <div>
                                <% if (event && event.date) { %>
                                    <%= event.date%>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">View Details</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <h2>即時顯示</h2>
    <div class="row">
        <div class="col-lg-12">
            <iframe src="http://localhost:3000/ui/#/0" width="100%" height="500" frameborder="1" scrolling="no"></iframe>
        </div>
    </div>
    <!-- /.row -->
<%- include extend/sb_footer %>
